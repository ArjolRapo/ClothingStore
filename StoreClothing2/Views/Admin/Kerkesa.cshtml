@model IEnumerable<StoreClothing2.Models.DrgPorosia>
@{
    ViewBag.Title = "Kerkesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kerkesa</h2>
<br />
<br />
<br />
<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card-box pd-20 height-100-p mb-30">
            @*<div class="row">
                     <div style="margin-bottom:20px;" class="col-md-7">
                          <input type="text" id="kerko" style="height: 40px; outline-color:lightgray;" />
                          <input type="submit" id="btnKerko" value="Kerko" class="btn btn-outline-primary" />
                     </div>
                </div>*@
            
                <table class="table">
                    <tr class="table-active">
                        <th colspan="3" style="text-align:center;">
                            Kerkesat per Porosi
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Emri)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Mbiemri)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Rruga)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Qyteti)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Shteti)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.KodiPostal)
                            </td>
                            <td class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Telefon)
                            </td>
                            <td class="col-md-2">
                                @Html.ActionLink("Prano", "NisePorosi", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-info" })
                            </td>
                            <td class="col-md-2">
                                @Html.ActionLink("Fshije", "MosPorosin", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-info" })
                            </td>
                            <td class="col-md-2">
                                @Html.ActionLink("Modifiko", "ModifioPorosine", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </table>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back To Admin Panel", "IndexAdmin")
</p>